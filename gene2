#!/usr/bin/python

import argparse

# User input + varibles
usr_str_input = ' '
file_str_input = ' '
occur = 0

parser = argparse.ArgumentParser()
parser.add-argument('filename')
args = parser.parse_args()
with open(args.filename) as fr:
    
    fr = [line.split() for line in fr.read().splitlines()]

    usr_str_input = input('Input ID Num:')
    for file_str_input in fr:
        if usr_str_input in file_str_input.split('\t'):
            for usr_str_input in file_str_input:
                occur += 1
            print("There are", occur, "Genes ID's in this Tax ID")
